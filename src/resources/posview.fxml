<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" prefHeight="600.0" prefWidth="900.0" fx:controller="controllers.POSViewController"  xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <!-- Left Menu SideBar -->
    <left>
        <VBox spacing="20" styleClass="sidebar">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Cafe POS" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label fx:id="usernameLabel" text="Logged in as: Adi" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 5 0 10 0;" onMouseClicked="#handleUsernameClick"/>
            <Button text="Add to Cart" onAction="#handleAddItem" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Quick Espresso" onAction="#handleQuickEspresso" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Remove Item" onAction="#handleRemoveItem" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Clear Cart" onAction="#handleClearCart" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Order History" onAction="#handleOrderHistory" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Generate Bill" onAction="#handleGenerateBill" styleClass="sidebar-button" prefWidth="150"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="sidebar-button" prefWidth="150"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <!-- Selecting Products -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Category:" styleClass="label"/>
                <ComboBox fx:id="categoryComboBox" prefWidth="150" onAction="#updateProductGrid"/>
                <Label text="Product:" styleClass="label"/>
                <ComboBox fx:id="productComboBox" prefWidth="200" onAction="#updateImagePreview"/>
                <Label text="Quantity:" styleClass="label"/>
                <TextField fx:id="quantityField" prefWidth="100"/>
            </HBox>
            <!-- Product Grid -->
            <FlowPane fx:id="productGrid" hgap="10" vgap="10" prefWrapLength="600"/>
            <!-- Image Preview -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Preview:" styleClass="label"/>
                <StackPane>
                    <ImageView fx:id="previewImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
                </StackPane>
            </HBox>

            <!-- Cart Table -->
            <TableView fx:id="cartTable" prefHeight="200">
                <columns>
                    <TableColumn fx:id="imageColumn" text="Item Preview" prefWidth="100"/>
                    <TableColumn fx:id="nameColumn" text="Menu Item" prefWidth="200"/>
                    <TableColumn fx:id="quantityColumn" text="Qty Ordered" prefWidth="100"/>
                    <TableColumn fx:id="priceColumn" text="Unit Price" prefWidth="100"/>
                    <TableColumn fx:id="totalColumn" text="Item Total" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Subtotal, Discount, and Payment options-->
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="subtotalLabel" text="Subtotal: $0.00" styleClass="subtotal-label"/>
                    <Label text="Discount (%):" styleClass="label"/>
                    <TextField fx:id="discountField" prefWidth="100" promptText="e.g., 10 for 10%"/>
                    <Label text="Payment:" styleClass="label"/>
                    <TextField fx:id="paymentField" prefWidth="100"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="discountedTotalLabel" text="Total After Discount: $0.00" styleClass="subtotal-label"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>